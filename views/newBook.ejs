<!DOCTYPE html>
<html>

<head>
    <%- include ('./partials/head.ejs') %>
</head>

<body>
    <form action="/book/" method="post">
        <div class="new-book-container">
            <h2>New Book Details</h2>

            <!-- Example Code from getbootstrap.com for forms -->
            <div class="row mb-3">
                <label for="title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="title" name="title" placeholder="Book Title" required />
                </div>
            </div>

            <div class="row mb-3">
                <label for="author" class="col-sm-2 col-form-label">Author</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="author" name="author" placeholder="Author" required />
                </div>
            </div>

            <div class="row mb-3">
                <label for="published" class="col-sm-2 col-form-label">Published</label>
                <div class="col-sm-6">
                    <input type="number" class="form-control" id="published" name="published"
                        placeholder="Year published" required />
                </div>
            </div>

            <div class="row mb-3">
                <label for="isbn" class="col-sm-2 col-form-label">ISBN</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="isbn" name="isbn"
                        placeholder="ISBN (product identifier)" required />
                </div>
            </div>

            <div class="row mb-3">
                <label for="abstract" class="col-sm-2 col-form-label">Abstract</label>
                <div class="col-sm-6">
                    <textarea class="form-control" id="abstract" name="abstract" rows="5" cols="15"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <label for="language" class="col-sm-2 col-form-label">Language</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="language" name="language" placeholder="Language" />
                </div>
            </div>

            <div class="row mb-3">
                <label for="classification" class="col-sm-2 col-form-label">Classification</label>
                <div class="col-sm-6">
                    <select class="form-select" name="classification" id="classification">
                        <option value="fiction">Fiction</option>
                        <option value="non_fiction">Non Fiction</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label for="sub_classification" class="col-sm-2 col-form-label">Sub-Classification</label>
                <div class="col-sm-6">
                    <select class="form-select" name="sub_classification" id="sub_classification">
                        <option value="adult">Adult</option>
                        <option value="kids">Kids</option>
                        <option value="teens">Teens</option>
                    </select>
                </div>
            </div>

            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Status:</legend>
                <div class="col-sm-6">
                    <div class="form-check">
                        <input name="status" class="form-check-input" type="radio" name="gridRadios" id="gridRadios1"
                            value="available" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Available
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="status" class="form-check-input" type="radio" name="gridRadios" id="gridRadios2"
                            value="in_circulation">
                        <label class="form-check-label" for="gridRadios2">
                            In Circulation
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input name="status" class="form-check-input" type="radio" name="gridRadios" id="gridRadios3"
                            value="unknown">
                        <label class="form-check-label" for="gridRadios3">
                            Unknown
                        </label>
                    </div>
                </div>
            </fieldset>

            <div class="row mb-3">
                <label for="copies" class="col-sm-2 col-form-label">Number of Copies: </label>
                <div class="col-sm-6">
                    <input type="number" class="form-control" id="copies" name="copies" placeholder="1" />
                </div>
            </div>

            <div class="row mb-3">
                <label for="image" class="col-sm-2 col-form-label">Image</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="image" name="image" value="/images/no_img.png" />
                </div>
            </div>

            <button type="submit" class="btn btn-secondary">Add Book</button>

    </form>

    <button type="submit" class="btn btn-secondary"><a href=<%='/' %>>Cancel</a></button>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</body>

</html>